<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Laboratório Rebase</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href=#>Laboratório Rebase</a>
        </div>
    </header>
    <main class="container my-3">
      <h4>Resultado da pesquisa pelo token <%= @token %></h4>
      <% if @tests.any? %>
        <table class="table table-striped my-3">
          <thead>
            <tr>
              <th>Token</th>
              <th>Paciente</th>
              <th>CPF</th>
              <th>Data de Nascimento</th>
              <th>CRM/UF</th>
              <th>Médico</th>
              <th>Exame</th>
              <th>Data</th>
              <th>Limites</th>
              <th>Resultado</th>
            </tr>
          </thead>
          <tbody>
            <% @tests.each do |test| %>
              <tr>
                <td><%= test['test_token'] %></td>
                <td><%= test['patient_name'] %></td>
                <td><%= test['patient_registration_number'] %></td>
                <td><%= Date.parse(test['patient_birth_date']).strftime("%d/%m/%Y")  %></td>
                <td><%= test['doctor_crm'] %>/<%= test['doctor_crm_state'] %></td>
                <td><%= test['doctor_name'] %></td>
                <td><%= test['test_type'] %></td>
                <td><%= Date.parse(test['test_date']).strftime("%d/%m/%Y") %></td>
                <td><%= test['test_limits'] %></td>
                <td><%= test['test_result'] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="alert alert-secondary text-center">
          Token inválido.
        </div>
      <% end %>
    </main>
  </body>
</html>